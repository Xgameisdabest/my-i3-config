search=$( (echo ) | rofi -dmenu -theme-str "window {height: 8%;}" -matching fuzzy -p "Search: " )
search_engine="https://www.google.com/search?q="

main() {
    if [[ -n "$search" ]]; then
      url="$search_engine$search"
      xdg-open "$url"
	
       else
	texts=("Nigga wdym ðŸ’€" "Bro wasted my fucking time ðŸ¤¬" "Fuck you ðŸ–•" "Bitch did NOT have anything to say ðŸ¤¡")
	num_texts=${#texts[@]}
	random_index=$(( RANDOM % num_texts ))
	random_text=${texts[random_index]}
	notify-send -t 1000 "$random_text"
		exit
	      fi
}

main

exit 0
