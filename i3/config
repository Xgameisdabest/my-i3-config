#start file manager
bindsym $mod+e exec thunar

#start browser
#bindsym $mod+c exec librewolf
bindsym $mod+c exec google-chrome-stable

#wallpaper
bindsym $mod+m exec waypaper

#games
bindsym $mod+g exec flatpak run page.kramo.Cartridges

#task manager
bindsym Ctrl+Shift+Escape exec flatpak run io.missioncenter.MissionCenter

#screenshot
bindsym Print exec --no-startup-id maim "/home/$USER/Pictures/$(date)" && notify-send "Screenshot'ed"
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/$(date)" && "Window Screenshot'ed"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/Pictures/$(date)" && notify-send "Selected Area Screenshot'ed "

# start a terminal
bindsym $mod+t exec alacritty
bindsym $mod+ctrl+t exec /usr/bin/alacritty 
# bindsym $mod+t exec /usr/bin/alacritty

#wifi, bluetooth shortcut
bindsym $mod+w exec ~/.config/rofi/modules/rofi-wifi-menu
bindsym $mod+b exec ~/.config/rofi/modules/rofi-bluetooth

#rofi web search
bindsym $mod+s exec ~/.config/rofi/modules/rofi-web-search

#lock the fucking screen
bindsym $mod+q exec betterlockscreen -l --span

# kill focused window
bindsym $mod+x kill

#scratchpad
bindsym $mod+d move scratchpad
bindsym $mod+Shift+d scratchpad show

# start dmenu (a program launcher)
bindsym $mod+r exec --no-startup-id rofi -show drun
bindsym $mod+Tab exec --no-startup-id rofi -show window

# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop

# you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+j focus down

# use the cursor keys to move windows position:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+k move up
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+j move down

# split in horizontal orientation
bindsym $mod+ctrl+h split h

# split in vertical orientation
bindsym $mod+ctrl+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

gaps outer 5
gaps inner 5
default_border pixel 5
default_floating_border pixel 8

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+q layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+v floating toggle resize set 60ppt 60ppt

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# show help menu
bindsym $mod+p exec ~/.config/rofi/modules/rofi-i3-keybinds/rofi-i3-keybinds.sh

